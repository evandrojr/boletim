  <br><br>
  <img class="imgLinha"  title="Linha" src="http://publicaintra7.serpro/clientes/supde/supde/linha_de.png" alt="Linha">
  <br><br>
  <% s=""
      pessoas.each { |p|  
      s+="<h2>#{p[:t]}</h2>
      <br>
      <p>#{p[:c]}</p>
      <br><br>
      "}
  %>
  <%= s if !s.empty? %>
<% end %>  
<!-- FIM DE Pessoas --> 

<!-- DE Cultura --> 

<% if !cultura.empty? %>

<div align="center">
  <img src="http://voce.serpro/articles/0106/3200/SessaoPipoca.jpg" alt="" width="200" style="">
</div>
<img src="http://voce.serpro/articles/0106/3198/de_cultura.png" alt="">
<br>
<img class="imgLinha"  src="http://publicaintra7.serpro/clientes/supde/supde/linha_de.png" >
<br>
<br>
  <% 
      s=""
      cultura.each { |p|  
          t = c = ""
          t = "    
            <h2>#{p[:t]}</h2> " if ! p[:t].empty?
          t = "    
            <h3>#{p[:st]}</h3> " if ! p[:st].empty?
          c = "<p>#{p[:c]}</p>" if ! p[:c].empty?
          s+= t + c 
          s+="<div align='center'>=======</div><br>" if ! p[:c].empty?
    }
  %>
  <% if !s.empty? %>
    <%=  s %>
  <% end %>
<% end %>
  
<!-- Fim DE Cultura -->  

<!-- Expediente --> 

<% if filled? expediente %>
  <% s=""
      expediente.each { |p|  
      s+="<h2>#{p[:t]}</h2>
      <br>
      <p>#{p[:c]}</p>
      <br><br>
      "}
  %>
  <% if !s.empty? %>
    <%=  s %>
  <% end %>
<% end %>
 
