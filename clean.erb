<!-- Editorial -->
  <% 
      s=""
      editorial.each { |p|  
          t = c = ""
          t = "<h2>#{p[:t]}</h2>" if filled?(p[:t])
          c = "<p><n>#{p[:c]}:</n>" if filled? p[:c]
          s+= t + c 
