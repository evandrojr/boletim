<% if !cultura.empty? %>
<img src="http://voce.serpro/articles/0106/3198/de_cultura.png" alt="">
<br>
<img class="imgLinha"  src="http://publicaintra7.serpro/clientes/supde/supde/linha_de.png" >
<br><br>
  <%  s=""
      cultura.each { |p|  
          t = c = ""
          t = "    
            <h2>#{p[:t]}</h2> " if ! p[:t].empty?
          t = "    
            <h3>#{p[:st]}</h3> " if ! p[:st].empty?
          c = "<p>#{p[:c]}</p>" if ! p[:c].empty?
          s+= t + c 
          s+="<br></br>" if ! p[:c].empty?
          #s+="<div align='center'>=======</div><br>" if ! p[:c].empty?
    }
  %>
  <% if !s.empty? %>
    <%=  s %>
  <% end %>
<% end %>
  
<!-- Fim DE Cultura -->  

<!-- Expediente --> 

<% if filled? expediente %>
  <div class="caixa">
  <% s=""
      expediente.each { |p|  
        s+="<h2>#{p[:t]}</h2>
        #{p[:c]}
      "}
  %>
  <% if !s.empty? %>
    <%= s %>
  <% end %>
  </div>  
<% end %>
 
